  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.223",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "cpx-fixed": "^1.6.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.2",
    "prettier": "^2.3.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.7.4",
